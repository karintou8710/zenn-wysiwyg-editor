    "@vitest/browser": "^3.2.4",
    "babel-plugin-prismjs": "^2.1.0",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.55.0",
