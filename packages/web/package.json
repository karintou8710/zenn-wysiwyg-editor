{
  "name": "web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "check:lint": "biome lint ./src",
    "check:format": "biome format ./src",
    "check": "run-s check:*",
    "fix": "biome check --write ./src",
    "preview": "vite preview",
    "test:e2e": "playwright test",
    "test:browser-mode": "vitest run --config=vitest.browser.config.ts",
    "test:node": "vitest run",
    "test": "pnpm test:node && pnpm test:browser-mode && pnpm test:e2e"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
