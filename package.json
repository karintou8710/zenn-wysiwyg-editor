{
  "name": "zenn-wysiwyg-editor",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:module": "pnpm -F zenn-markdown-html build",
    "build": "pnpm build:module && tsc -b && vite build",
    "check:lint": "biome lint ./src",
    "check:format": "biome format ./src",
    "check": "run-s check:*",
    "fix": "biome check --write ./src",
    "preview": "vite preview",
    "test": "vitest run --config=vitest.browser.config.ts"
  },
