    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.539.0",
    "next-themes": "^0.4.6",
    "prismjs": "^1.30.0",
    "prosemirror-markdown": "^1.13.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
